---
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle.astro';
import CookieConsent from './CookieConsent.astro'; // <--- Import Component

const today = new Date();
---

<footer>
    <div class="footer-content">
        <div class="copyright">
            &copy; {today.getFullYear()} {SITE_TITLE}. All rights reserved.
            <span class="legal-links">
                | <a href="/privacy">Privacy</a> | <a href="/cookies">Cookies</a>
            </span>
        </div>
        
        <div class="theme-toggle-container">
            <ThemeToggle />
        </div>
    </div>
    
    <CookieConsent /> 
</footer>

<style>
	footer {
		padding: 2em 1em 4em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: var(--text-muted); /* Updated to use variable */
		text-align: center;
        border-top: 1px solid var(--border-color); /* Updated to use variable */
        margin-top: 2rem;
	}
    
    .footer-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .legal-links a {
        color: inherit;
        text-decoration: none;
        font-size: 0.9em;
    }
    .legal-links a:hover {
        text-decoration: underline;
        color: var(--accent);
    }

    @media (min-width: 600px) {
        .footer-content {
            flex-direction: row;
            justify-content: space-between;
        }
    }
</style>