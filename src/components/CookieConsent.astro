<div id="cookie-banner" class="cookie-banner hidden">
    <div class="cookie-content">
        <p>
            We use cookies to improve your experience and deliver personalized content. 
            By using our site, you acknowledge that you have read and understand our 
            <a href="/privacy">Privacy Policy</a> and <a href="/cookies">Cookie Policy</a>.
        </p>
        <button id="accept-cookies" class="accept-btn">Accept</button>
    </div>
</div>

<style>
    .cookie-banner {
        position: fixed;
        bottom: 20px;
        right: 20px;
        left: 20px;
        max-width: 600px;
        margin: 0 auto;
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: var(--box-shadow);
        z-index: 1000;
        /* Slide up animation */
        transform: translateY(0);
        transition: transform 0.3s ease-in-out, opacity 0.3s;
    }

    .cookie-banner.hidden {
        transform: translateY(150%);
        opacity: 0;
        pointer-events: none;
    }

    .cookie-content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: flex-start;
    }

    @media (min-width: 768px) {
        .cookie-content {
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
        }
    }

    p {
        margin: 0;
        font-size: 0.9em;
        color: var(--text-main);
    }

    a {
        text-decoration: underline;
        font-weight: bold;
    }

    .accept-btn {
        background: var(--accent);
        color: white; /* Default for Light Mode (Brown bg) */
        border: none;
        padding: 0.5rem 1.5rem;
        border-radius: 4px;
        cursor: pointer;
        font-family: "Times New Roman", serif;
        font-weight: bold;
        font-size: 1em;
        white-space: nowrap;
        transition: opacity 0.2s;
    }

    /* Dark Mode Adjustment for Button Text */
    :global([data-theme='dark']) .accept-btn {
        color: var(--p-navy-dark); /* Dark text on Light Blue bg */
    }

    .accept-btn:hover {
        opacity: 0.9;
    }
</style>

<script is:inline>
    const banner = document.getElementById('cookie-banner');
    const acceptBtn = document.getElementById('accept-cookies');

    // Check if user has already accepted
    if (!localStorage.getItem('cookieConsent')) {
        // Wait a moment before showing
        setTimeout(() => {
            banner.classList.remove('hidden');
        }, 500);
    }

    acceptBtn.addEventListener('click', () => {
        localStorage.setItem('cookieConsent', 'true');
        banner.classList.add('hidden');
    });
</script>